<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BluetoothCourse.Scan.ScanResults">
    <StackLayout Padding="20">

        <Label Text="Scan Devices" FontSize="20" Margin="0,0,0,10"/>

        <Picker x:Name="pickerDevices" Title="Select a device" ItemDisplayBinding="{Binding DisplayName}" />

        <Button x:Name="btnConectar" Text="Connect" FontSize="20" HorizontalOptions="CenterAndExpand" Clicked="btnConectar_Clicked" Margin="0,10,0,0"/>

        <Button x:Name="btnDesconectar" Text="Disconnect" FontSize="20" HorizontalOptions="CenterAndExpand" Clicked="btnDesconectar_Clicked" Margin="0,10,0,0"/>

        <Button x:Name="btnLightControl" Text="Light Control" FontSize="20" Clicked="btnLightControl_Clicked" Margin="0,10,0,0"/>
        
        <Image Source="logbluetoothandarduino.png" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" HeightRequest="200"/>

    </StackLayout>
</ContentPage>